<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <Label fx:id="title" styleClass="title" stylesheets="@application.css" text="Recipe Name" />
    <Button fx:id="backButton" layoutX="30" layoutY="20" styleClass="backButton" stylesheets="@application.css" text="Back" />
    <Button fx:id="prevButton" layoutY="640.0" styleClass="bottomButton" stylesheets="@application.css" text="Prev" />
    <Button fx:id="nextButton" layoutX="640.0" layoutY="640.0" styleClass="bottomButton" stylesheets="@application.css" text="Next" />
    <GridPane layoutX="50" layoutY="80.0" prefHeight="540.0" prefWidth="1180.0">
        <columnConstraints>
            <ColumnConstraints prefWidth="160.0" />
            <ColumnConstraints prefWidth="1020.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <Label styleClass="crLabel" stylesheets="@application.css" text="Instruction" />
        <Label styleClass="crLabel" stylesheets="@application.css" text="Note" GridPane.rowIndex="1" />
        <Label fx:id="instructionLabel" styleClass="crLabel" stylesheets="@application.css" text="Instruction Text" GridPane.columnIndex="1" />
        <TextArea fx:id="noteArea" prefHeight="200.0" prefWidth="200.0" styleClass="crArea" stylesheets="@application.css" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    </GridPane>
</AnchorPane>
